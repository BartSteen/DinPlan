<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dinplan">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity_weekly_calendar"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:label=""/>
        <activity
            android:name=".activity_calendar"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:label=""/>
        <activity android:name=".activity_meal_list">
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:label=""
        <intent-filter>
            <action android:name="android.intent.action.SEARCH" />
        </intent-filter>

        <meta-data
            android:name="android.app.searchable"
            android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".activity_add_ingredient"
            android:parentActivityName=".activity_add_meal"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:label=""/>
        <activity
            android:name=".activity_add_meal"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustNothing"
            />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>